<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@drawable/login_bg"
                                                 android:gravity="center"
                                                 android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="144dp"
        android:layout_marginLeft="@dimen/spacing_large_56"
        android:layout_marginRight="@dimen/spacing_large_56"
        android:layout_marginTop="144dp"
        android:background="@color/white_back"
        android:padding="@dimen/spacing_medium_32">

        <TextView
            android:id="@+id/login_enter_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/login_enter_tv"
            android:textColor="@color/red"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/login_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_enter_tv"
            android:layout_marginTop="@dimen/spacing_medial_24"
            android:hint="@string/login_email_hint"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            />

        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_email_et"
            android:layout_marginTop="@dimen/spacing_medial_24"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>

        <Button
            android:id="@+id/login_enter_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password_et"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/spacing_medium_32"
            android:background="@color/red"
            android:fontFamily="sans-serif-medium"
            android:text="@string/login_enter_tv"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/login_forgot_password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_enter_btn"
            android:layout_marginTop="@dimen/spacing_medial_24"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/login_forgot_password_button"
            android:textColor="@color/grey_light"/>


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add"
        app:layout_anchorGravity="bottom|right"/>
</android.support.design.widget.CoordinatorLayout>